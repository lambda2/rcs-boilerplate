.main-login-box

  .main-login-box--links
    = link_to omniauth_authorize_path(:user, :twitter), class: "rounded-button signin--twitter" do
      %span.s-icon-twitter-bird
      Sign in with Twitter
    %button.rounded-button{disabled: :disabled} Signin with email
  
  -# Hidden section
  %section.signin--with-email
    %h2 Log in
    = form_for(:user, :url => session_path(:user)) do |f|
      .field
        = f.label :email
        = f.email_field :email, autofocus: true
      .field
        = f.label :password
        = f.password_field :password, autocomplete: "off"
      .field
        = f.label :remember_me
        = f.check_box :remember_me
      .actions
        = f.submit "Log in"
    %footer.bottom-signin-links
      = link_to "Sign up", new_registration_path(:user)
      = link_to "Forgot your password?", new_password_path(:user)

      -# - if devise_mapping.confirmable? && controller_name != 'confirmations'
      -#   = link_to "Didn't receive confirmation instructions?", new_confirmation_path(:user)

      -# - if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
      -#   = link_to "Didn't receive unlock instructions?", new_unlock_path(:user)
